<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.dramacool" name="DramaCool" version="3.0.4" provider-name="groggyegg">
    <requires>
        <import addon="script.module.beautifulsoup4"/>
        <import addon="script.module.peewee"/>
        <import addon="script.module.requests"/>
        <import addon="script.module.resolveurl"/>
        <import addon="script.module.six"/>
        <import addon="script.module.xbmcext" version="1.3.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="dramacool/addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Video plugin for DramaCool</summary>
        <description lang="en_GB">Watch Asian Drama and Korean Show with English subtitles.</description>
        <platform>all</platform>
        <license>MIT License</license>
        <source>https://github.com/groggyegg/plugin.video.dramacool</source>
        <news>v3.0.4 (2022-07-02)
            [new] supported resolvers will now display text with orange color
            [fix] prevent exception from occurring when domain is blocked
            [fix] updated redirect domains
        </news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
